<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/long_click_custom_dialog"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="match_parent"    
    android:orientation="vertical">
    
        
    <LinearLayout
        android:id="@+id/long_click_custom_dialog_title_row" 
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_details_long_click_custom_dialog_row_height"
        android:background="@color/video_upgrade_dialog_title_backgournd_color"
        android:paddingLeft="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left"
        android:paddingRight="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left">
        
        <TextView 
	        android:id="@+id/upgrade_custom_dialog_title_text" 
	        android:layout_width="@dimen/media_details_long_click_custom_dialog_text_view_row_width"
	        android:layout_height="wrap_content"      
	        android:textColor="@color/white"
	        android:textSize="18dp"        
	        android:layout_gravity="center_vertical"
	        android:gravity="center_vertical"/>
        
        <ImageButton
	        android:id="@+id/close_button"
	        android:layout_width="@dimen/media_details_long_click_custom_dialog_close_button_size"
	        android:layout_height="@dimen/media_details_long_click_custom_dialog_close_button_size"
	        android:background="@color/transparent"
	        android:src="@drawable/icon_close_white"
	        android:layout_gravity="right|center_vertical"/>
        
    </LinearLayout>

    
    <View 
        android:id="@+id/long_click_custom_dialog_seperator1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/media_details_seperetor_height"/>
    
    <LinearLayout
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left">
        
	    <TextView 
	        android:id="@+id/upgrade_custom_dialog_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_vertical"
	        android:textColor="@color/black"
	        android:paddingTop="12dp"
	        android:paddingBottom="6dp"
	        android:paddingLeft="@dimen/media_details_long_click_custom_dialog_text_view_row_padding_left"/>
	    
	    <TextView 
	        android:id="@+id/upgrade_custom_dialog_text2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_vertical"
	        android:textColor="@color/black"
	        android:paddingTop="12dp"
	        android:paddingBottom="6dp"
	        android:paddingLeft="@dimen/media_details_long_click_custom_dialog_text_view_row_padding_left"
	        android:drawableRight="@drawable/icon_coins"
	        android:gravity="center_vertical"/>
	    
	 </LinearLayout>
	    
</LinearLayout> 

