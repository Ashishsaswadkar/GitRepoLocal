<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="@dimen/trivia_bubble_padding"
    android:paddingLeft="@dimen/trivia_bubble_padding"
    android:background="@color/application_background_grey"  >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/background_trivia_bubble_left_top"
        android:layout_marginRight="@dimen/trivia_bubble_side_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_trivia_bubble_left_middle"
        android:padding="@dimen/trivia_bubble_content_padding"
        android:layout_marginRight="@dimen/trivia_bubble_side_margin"
        android:orientation="vertical" >
        
         <TextView
	        android:id="@+id/player_trivia_text"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        style="@style/TextSmallMedium"
	        android:layout_marginBottom="@dimen/trivia_bubble_content_padding"
	        android:textColor="@color/application_background_blue"/>

     	<Button
            android:id="@+id/player_trivia_button_share"
            android:layout_width="@dimen/trivia_bubble_share_button_width"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/player_content_margin_side"
            android:background="@drawable/background_button_blue"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:text="@string/general_capital_share" /> 

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/trivia_bubble_side_margin"
        android:scaleType="fitXY"
        android:src="@drawable/background_trivia_bubble_left_bottom" />

</LinearLayout>