<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="20dp"
    android:background="@drawable/roundshape"
    >

    <LinearLayout android:layout_width="wrap_content" android:id="@+id/ll"
    android:layout_height="wrap_content" android:orientation="vertical">
	<TextView 
    android:id="@+id/text" 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"  
    android:gravity="center" 
    android:padding="20dp"
    android:textSize="22sp"
    android:layout_gravity="center_horizontal"
    android:text="Congratulations!"
    android:textColor="#FFFF00" 
     
    android:textStyle="italic" />

	<!-- <Button
        android:id="@+id/btn_dismiss" 
        style="?android:attr/buttonStyleSmall" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:text="Dismiss" 
        android:visibility="gone"/> -->
        
        <TextView
        android:id="@+id/download_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/discovery_mood_selected_item_text_size"
        android:padding="20dp" 
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="@string/comments_downpopup_login"
        android:textColor="#ffffff"
        android:textStyle="bold" />
        
	<TextView
        android:id="@+id/offer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp" 
        android:textSize="@dimen/discovery_mood_selected_item_text_size"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="offer"
        android:textColor="#ffffff"
        android:textStyle="bold" />
	

	<View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"/>
<!-- <FrameLayout
    android:layout_width="match_parent" 
    android:layout_height="wrap_content" 
    android:layout_gravity="center_vertical"> -->

    
    

    <TextView
        android:id="@+id/lbl_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp" 
        android:gravity="center"
        android:textSize="@dimen/discovery_mood_selected_item_text_size"
        android:layout_gravity="center_horizontal"
        android:text="Please login / Sign up to continue."
        android:textColor="#ffffff"
        android:textStyle="bold" />

<!-- </FrameLayout>   -->
	</LinearLayout>
		<FrameLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_alignRight="@+id/ll">
<ImageButton
        android:id="@+id/btn_dismiss" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:text="Dismiss" 
        android:visibility="visible"/>
</FrameLayout>
</RelativeLayout>