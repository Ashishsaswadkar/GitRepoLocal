<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General: Text -->
    
    <style name="TextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">20dp</item>
    </style>
    
    <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="TextSmallMedium" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="TextSmallMediumMinus" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
     <style name="TextSmallMediumMinusPlus" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
      <style name="TextSmallPlus" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9dp</item>
        <item name="android:typeface">normal</item>
    </style>
    
    <!-- General Loading Indicator -->
  	<style name="LoadingIndicator" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/loading_indicator</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    
    <!-- Home: Text -->
    
    <style name="HomeMusicTileTextBig" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/home_music_tile_title_text_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
    
    <style name="HomeMediaTileTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>
    
    <style name="HomeMediaTileTextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/home_music_tile_song_or_playlist_title_text_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>
    
    <style name="MediaTilesGrid">
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:listSelector">@null</item>
    </style>

    
    <!-- General - title bar -->
    
    <style name="TitleBarOptionsItem" parent="@android:style/Widget.Button">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_title_bar_options_panel_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">5dp</item>
   	</style>
    
    <!-- Curved Button -->
    
    <style name="CurvedButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
        <item name="android:scaleType">fitXY</item>
   	</style>
   	
   	<style name="RightTopCurvedButton" parent="@style/CurvedButton">
       	<item name="android:paddingBottom">13dp</item>
       	<item name="android:paddingLeft">13dp</item>
       	<item name="android:background">@drawable/background_button_right_top_curve</item>
   	</style>
   
    <style name="RightBottomCurvedButton" parent="@style/CurvedButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:background">@drawable/background_button_right_bottom_curve</item>
    </style>
    
    <style name="LeftTopCurvedButton" parent="@style/CurvedButton">
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:background">@drawable/background_button_left_top_curve</item>
    </style>
    
    <style name="LeftBottomCurvedButton" parent="@style/CurvedButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:background">@drawable/background_button_left_bottom_curve</item>
    </style>
    
    
    <style name="CurvedImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:scaleType">fitXY</item>
   	</style>
    
    <style name="RightTopCurvedBlueButton" parent="@style/CurvedImageButton">
       	<item name="android:paddingBottom">13dp</item>
       	<item name="android:paddingLeft">13dp</item>
       	<item name="android:background">@drawable/background_button_right_top_curve_blue</item>
   	</style>
   
    <style name="RightBottomCurvedBlueButton" parent="@style/CurvedImageButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:background">@drawable/background_button_right_bottom_curve_blue</item>
    </style>
    
    <style name="LeftTopCurvedBlueButton" parent="@style/CurvedImageButton">
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:background">@drawable/background_button_left_top_curve_blue</item>
    </style>
    
    <style name="LeftBottomCurvedBlueButton" parent="@style/CurvedImageButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:background">@drawable/background_button_left_bottom_curve_blue</item>
    </style>
	    
    
    <!-- Curved Image Button -->
    
    <style name="CurvedImageButton" parent="@android:style/Widget.ImageButton">
        <item name="android:scaleType">fitXY</item>
    </style>
    
    <style name="RightTopCurvedImageButton" parent="@style/CurvedImageButton">
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">13dp</item>
    </style>
    
    <style name="RightBottomCurvedImageButton" parent="@style/CurvedImageButton">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingLeft">13dp</item>
    </style>
    
    <style name="LeftTopCurvedImageButton" parent="@style/CurvedImageButton">
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingRight">13dp</item>
    </style>
    
    <style name="LeftBottomCurvedImageButton" parent="@style/CurvedImageButton">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingRight">13dp</item>
    </style>
    
    
    <!-- Media Details -->
    
    <style name="ActionButton" >
        <item name="android:layout_width">@dimen/action_button_width</item>
        <item name="android:layout_height">@dimen/action_button_height</item>
        <item name="android:textAppearance">@style/TextSmall</item>
        <item name="android:textColor">@color/media_details_action_button_text_color</item>
    </style>
   
   <style name="ActionButtonBackgroundWhite" parent="@style/ActionButton">
        <item name="android:background">@color/media_details_button_background_grey_light</item>
    </style>
    
    <style name="ActionButtonBackgroundGrey" parent="@style/ActionButton">
        <item name="android:background">@color/media_details_button_background_grey</item>
    </style>
    
    <style name="TextViewCategorytext">
        <item name="android:layout_width">@dimen/search_popular_searches_categories_line_text_width</item>
        <item name="android:layout_height">match_parent</item>
		<item name="android:textSize">@dimen/search_categories_item_text_size</item>
		<item name="android:gravity">left|center_vertical</item>
		<item name="android:textColor">@color/search_fragment_categories_text_color</item>
		<item name="android:paddingLeft">@dimen/search_popular_searches_categories_line_text_padding_left</item>
		<item name="android:singleLine">true</item>		            
    </style>
    
    <!-- Player -->
    
     <style name="videoPlayeInfoRowText">
         <item name="android:layout_width">match_parent</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:paddingLeft">10dp</item>
		<item name="android:textSize">@dimen/video_info_page_table_row_text_size</item>
        <item name="android:textColor">@color/video_player_info_page_row_text_color</item>
    </style>
    
     <style name="FeedbackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/feedback_field_rating_bar_icon_selector</item>
        <item name="android:minHeight">@dimen/feedback_field_rating_bar_icon</item>
        <item name="android:maxHeight">@dimen/feedback_field_rating_bar_icon</item>
    </style>
    
     <style name="App.Style.Field.Spinner" parent="@style/Widget.Sherlock.Light.ListView.DropDown">
         <item name="android:dividerHeight">@dimen/field_list_line_separator</item>
         <item name="android:divider">@drawable/field_list_line_separator</item>
     </style>
     
     <style name="cursorStyle">
         <item name="android:textCursorDrawable">@null</item>
     </style>
     
     <style parent="android:Widget.CompoundButton.CheckBox" name="CheckBoxAppTheme">
         <item name="android:button">@drawable/btn_check_holo_light</item>
     </style>
    
</resources>